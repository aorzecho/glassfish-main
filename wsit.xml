    </target>
    <target name="jaxws-api.publish">
        <mvn.publish jar="${external.dir}/jaxws-api/jaxws-api.jar" mvngroup="javax.xml" mvnartid="jaxws-api" mvnversion="${jaxws-api.version}"/>
    </target>

