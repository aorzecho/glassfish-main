<?xml version="1.0" encoding="iso-8859-1"?>

<project name="antlr source integration" default="build" basedir=".">
	<!-- import build.xml for init target and inherited properties -->
    <import file="build.xml"/>	
    <target name="build" depends="antlr.checkout, antlr.build" />
    <target name="antlr.checkout" >
        <echo message="checkout antlr sources from ${antlr.svn.url}."/>
        <exec executable="svn" dir="${external.dir}" failonerror="true" >
	    <arg line="checkout" />
            <arg line="${antlr.svn.url}" />
            <arg line="antlr" />
	</exec>
    </target>
    <target name="antlr.build" depends="antlr.checkout" >
        <exec executable="mvn" dir="${external.dir}/antlr" failonerror="true" >
	    <arg line="-Dmaven.repo.local=${maven.repo.local}" />
            <arg line="install" />
	</exec>
    </target>
    <target name="antlr.publish" >
        <exec executable="mvn" dir="${external.dir}/antlr" failonerror="true" >
	    <arg line="-Dmaven.repo.local=${maven.repo.local}" />
	    <arg line="-DaltDeploymentRepository=rator.sfbay::default::dav:http://glassfish-maven-repository.sfbay/maven/repositories/glassfish/" />
            <arg line="deploy" />
	</exec>
    </target>

</project>
