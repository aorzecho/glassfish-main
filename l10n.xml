<?xml version="1.0" encoding="iso-8859-1"?>

<project name="l10n source integration" default="build" basedir=".">

    <!-- import build.xml for init target and inherited properties -->
    <import file="build.xml"/>

    <target name="build" depends="init">
        <antcall target="l10n.build" />
    </target>

    <!--
        Checkout l10n source and build
    -->
    <target name="l10n.checkout" >
        <echo message="checkout l10n from ${l10n.svn.url}."/>
        <exec executable="svn" dir="${external.dir}" failonerror="true" >
	    <arg line="checkout" />
            <arg line="${l10n.svn.url}" />
            <arg line="l10n" />
	</exec>
    </target>
    <target name="l10n.build" depends="l10n.checkout" >
        <!-- build l10n -->
        <exec executable="mvn" dir="${external.dir}/l10n" failonerror="true" >
	    <arg line="-Dmaven.repo.local=${maven.repo.local}" />
            <arg line="install" />
        </exec>
    </target>

</project>
