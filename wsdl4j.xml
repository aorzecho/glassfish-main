<?xml version="1.0" encoding="iso-8859-1"?>

<project name="wsdl4j source integration" default="build" basedir=".">

    <!-- import build.xml for init target and inherited properties -->
    <import file="build.xml"/>

    <target name="build" depends="init">
        <antcall target="wsdl4j.build" />
    </target>

    <!--
        Checkout wsdl4j source and build
    -->
    <target name="wsdl4j.checkout" >
        <echo message="checkout wsdl4j from ${wsdl4j.svn.url}."/>
        <exec executable="svn" dir="${external.dir}" failonerror="true" >
	    <arg line="checkout" />
            <arg line="${wsdl4j.svn.url}" />
            <arg line="wsdl4j" />
	</exec>
    </target>
    <target name="wsdl4j.build" depends="wsdl4j.checkout" >
        <exec executable="ant" dir="${external.dir}/wsdl4j" failonerror="true" newenvironment="false" >
            <arg line="-f build.xml" />
        </exec>
    </target>

</project>
