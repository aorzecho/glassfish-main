<?xml version="1.0" encoding="iso-8859-1"?>

<project name="trilead-ssh2 source integration" default="build" basedir=".">

    <!-- import build.xml for init target and inherited properties -->
    <import file="build.xml"/>

    <target name="build" depends="init">
        <antcall target="trilead-ssh2.build" />
    </target>

    <!--
        Checkout trilead-ssh2 source and build
    -->
    <target name="trilead-ssh2.checkout" >
        <echo message="checkout trilead-ssh2 from ${trilead-ssh2.svn.url}."/>
        <exec executable="svn" dir="${external.dir}" failonerror="true" >
	    <arg line="checkout" />
            <arg line="${trilead-ssh2.svn.url}" />
            <arg line="trilead-ssh2" />
	</exec>
    </target>
    <target name="trilead-ssh2.build" depends="trilead-ssh2.checkout" >
        <!-- build trilead-ssh2 -->
        <exec executable="mvn" dir="${external.dir}/trilead-ssh2" failonerror="true" >
	    <arg line="-Dmaven.repo.local=${maven.repo.local}" />
            <arg line="install" />
	</exec>
    </target>

</project>
