<?xml version="1.0" encoding="iso-8859-1"?>

<project name="Woodstock source integration" default="build" basedir="..">

    <!-- import build.xml for init target and inherited properties -->
    <import file="${basedir}/build.xml"/>

    <target name="checkout" depends="init,check.svn" unless="skipCheckout">
        <svn.checkout repo="${woodstock.svn.url}" dest="woodstock"/>
    </target>

    <target name="build" depends="checkout" >
        <ant dir="${glassfish.external.dir}/woodstock/master">
            <property name="javac.target" value="1.5"/>
            <property name="javac.source" value="1.5"/>
        </ant>
        <ant dir="${glassfish.external.dir}/woodstock/maven"/>
    </target>
</project>
