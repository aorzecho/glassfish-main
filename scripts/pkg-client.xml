<?xml version="1.0" encoding="iso-8859-1"?>

<project name="Buildpkg-client source" default="build" basedir=".">

    <!-- import build.xml for init target and inherited properties -->
    <import file="build.xml"/>

    <target name="build" depends="init">
        <antcall target="pkg-client.build" />
    </target>
    <!--
        Checkout pkg-client source and build
    -->
    <target name="pkg-client.project" >

    </target>	 
    <target name="pkg-client.checkout" >
        <echo message="checkout pkg-client from ${pkg-client.svn.url}."/>
        <!-- checkout pkg-client source -->
        <exec executable="svn" dir="${external.dir}" failonerror="true" >
	    <arg line="checkout" />
	    <arg line="${pkg-client.svn.url}" />
	    <arg line="-r"/>
	    <arg line="${pkg-client.svn.revision}" />
            <arg line="pkg-client" />
	</exec>
    </target>
    <target name="pkg-client.build" depends="pkg-client.checkout" >
        <!-- build pkg-client source -->
        <exec executable="mvn" dir="${external.dir}/pkg-client" failonerror="true" >
	    <arg line="-Dmaven.repo.local=${maven.repo.local}" />
            <arg line="install" />
	</exec>
    </target>

</project>

