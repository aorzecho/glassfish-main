<?xml version="1.0" encoding="iso-8859-1"?>

<project name="V3-docs source integration" default="build" basedir=".">

    <!-- import build.xml for init target and inherited properties -->
    <import file="build.xml"/>

    <target name="build" depends="init">
        <antcall target="v3-docs.build" />
    </target>

    <!--
        Checkout v3-docs source and build
    -->
    <target name="v3-docs.checkout" >
        <echo message="checkout v3-docs from ${v3-docs.svn.url}."/>
	<mkdir dir="${external.dir}/v3-docs"/>
        <exec executable="svn" dir="${external.dir}/v3-docs" failonerror="true" >
	    <arg line="checkout" />
            <arg line="${v3-docs.svn.url}" />
            <arg line="." />
	</exec>
    </target>
    <target name="v3-docs.build" depends="v3-docs.checkout" >
        <!-- build v3-docs -->
        <exec executable="mvn" dir="${external.dir}/v3-docs" failonerror="true" >
	    <arg line="-Dmaven.repo.local=${maven.repo.local}" />
            <arg line="install" />
        </exec>
    </target>

</project>
