<?xml version="1.0" encoding="iso-8859-1"?>

<project name="Scripting source integration" default="build" basedir=".">

    <!-- import build.xml for init target and inherited properties -->
    <import file="build.xml"/>

    <target name="build" depends="init">
        <antcall target="scripting.build" />
    </target>

    <!--
        Checkout scripting source and build
    -->
    <target name="scripting.checkout" >
        <echo message="checkout Scripting from ${scripting.svn.url}."/>
        <exec executable="svn" dir="${external.dir}" failonerror="true" >
	    <arg line="checkout" />
            <arg line="${scripting.svn.url}" />
            <arg line="scripting" />
	</exec>
    </target>
    <target name="scripting.build" depends="scripting.checkout" >
        <!-- build scripting -->
        <exec executable="mvn" dir="${external.dir}/scripting" failonerror="true" >
	    <arg line="-Dmaven.repo.local=${maven.repo.local}" />
            <arg line="install" />
	</exec>
    </target>
</project>
